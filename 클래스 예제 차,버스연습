

#include <iostream>
// 추상화는 필요한 것만 남기고 전부 삭제하는 과정
    // 클래스를 통해서 구체화를 한다
using namespace std;
class cla {
public:
    int speed;
    int gear;
    string color;
    void speedUp() {
        speed += 10;
    }
    void speedDown() {
        speed -= 10;
    }
    void show() {
        cout << "기본 스피드 :" << speed << endl;
        speedUp();
        cout << "스피드 업 :" << speed << endl;
        speedDown();
        cout << "스피드 다운 :" << speed << endl;
        cout << "차의 색깔 :" << color << endl;
        cout << "기어 :" << gear << endl;
        cout << endl;
    }
};


int main()
{
    cla car;
    cla bus;
    car.speed = 10;
    car.gear = 3;
    car.color = "blue";

    bus.speed = 20;
    bus.gear = 5;
    bus.color = "yellow";

    car.show();
    bus.show();
    



}
